<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/activity_companion_background"
	android:padding="@dimen/box_inset_layout_padding"
	tools:context="com.calsignlabs.apde.wearcompanion.CompanionActivity"
	tools:deviceIds="wear">
	
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:boxedEdges="left|right"
		android:padding="5dp"
		android:scrollbars="none">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="24dp"
			android:paddingBottom="24dp"
			android:orientation="vertical">
			
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/message_default_part1"
				android:fontFamily="sans-serif-medium"
				android:textSize="16sp"
				android:paddingTop="5dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:paddingBottom="0dp"/>
			
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/message_default_part2"
				android:fontFamily="sans-serif-medium"
				android:textSize="16sp"
				android:padding="5dp" />
			
			<TextView
				android:text="@string/app_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="sans-serif-medium"
				android:textSize="16sp"
				android:padding="5dp"
				android:textColor="@color/holo_select_light" />
			
			<TextView
				android:id="@+id/wear_compnanion_activity_version"
				android:text="@string/app_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="sans-serif-medium"
				android:textSize="16sp"
				android:padding="5dp" />
		</LinearLayout>
	</ScrollView>
</androidx.wear.widget.BoxInsetLayout>
