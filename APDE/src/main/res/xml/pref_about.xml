<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.preference.PreferenceCategory
        android:key="pref_key_about"
        android:title="@string/pref_about" >
        
        <androidx.preference.Preference
            android:key="pref_about_version"
            android:title="@string/pref_about_version" />
        
        <androidx.preference.Preference
            android:key="pref_about_google_play"
            android:title="@string/pref_about_google_play" />
        
        <androidx.preference.Preference
            android:key="pref_about_github"
            android:title="@string/pref_about_github" />
        
        <androidx.preference.Preference
            android:key="pref_about_open_beta"
            android:title="@string/pref_about_open_beta"
            android:summary="@string/pref_about_open_beta_desc" />
        
        <androidx.preference.Preference
            android:key="pref_about_email_dev"
            android:title="@string/pref_about_email_dev" />
        
        <androidx.preference.Preference
            android:key="pref_about_licenses"
            android:title="@string/pref_about_licenses" />
    
        <androidx.preference.Preference
            android:title="@string/pref_whats_new"
            android:fragment="com.calsignlabs.apde.support.StockPreferenceFragment" >
        
            <extra android:name="resource" android:value="pref_whats_new" />
        </androidx.preference.Preference>
    </androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>