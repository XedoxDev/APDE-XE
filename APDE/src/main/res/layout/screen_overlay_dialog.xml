<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:paddingTop="12dp"
			  android:paddingBottom="12dp"
			  android:paddingLeft="24dp"
			  android:paddingRight="24dp">
	
	<TextView android:id="@+id/screen_overlay_dialog_message"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:text="@string/screen_overlay_dialog_message" />
	
	<CheckBox android:id="@+id/screen_overlay_dialog_dont_show_again"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:text="@string/screen_overlay_dialog_dont_show_again"
			  android:layout_marginTop="12dp" />
</LinearLayout>
